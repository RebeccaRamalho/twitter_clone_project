<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/emojionearea.css">
    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>

    <script src="/css/emojionearea.js"></script>

    <title>Twittar</title>
</head>

<body>
 
    <% connectedUserTweetDet.forEach((element, index)=> { %>
    
   
        <form action="/tweets/<%=tweetId%>" method="post" class="tweet-container-form hr">
            <div class="tweet-container-message">
                <label for="message"></label>
                <div class="tweet-container-text">
                    <textarea name="message" id="message" placeholder=" tweet : <%= element.texts %> created the: <%= element.creation_date %> by: @<%= element.username %>
                    "></textarea>
                </div>

            </div>
            <div class="tweet-container-button">
                <button type="submit" class="tweet-button button1">Modify</button>
            </div>


        </form>

        <form action="/tweet/<%= element.id %>" method="post" class="">

            <div class="tweet-container-button">
                <button type="submit" class="tweet-button button2">Delete</button>
            </div>

        </form>       

        <% }) %>

        <script type="text/javascript">
            $(document).ready(function() {
              $("#message").emojioneArea({
                pickerPosition: "bottom"
              });     
            });
          </script>





</body>

</html>