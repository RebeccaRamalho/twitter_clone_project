<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>

<body>

    <section class="section-accueil">

        <div class="tweet-navigation">
            <img class="tweet-navigation-image" src="/images/logoTwitter.png" alt="">
            <div class="tweet-navigation-link">
                <a href="/">
                    <img src="/images/home-run.png" alt="">
                    <h2>Home</h2>
                </a>
                <a href="">
                    <img src="/images/hastag.png" alt="">
                    <h2>Explore</h2>
                </a>
                <a href="">
                    <img src="/images/bookmark.png" alt="">
                    <h2>Bookmarks</h2>
                </a>
                <a href="/username">
                    <img src="/images/user.png" alt="">
                    <h2>My Tweets</h2>
                </a>
                <a href="/logout">
                    <img src="/images/logout.png" alt="">
                    <h2>Logout</h2>
                </a>
            </div>
        </div>

        <div class="tweet-container">
            <div class="tweet-container-title">
                <h3>Home</h3>
            </div>
            <form action="/tweet" method="post" class="tweet-container-form">
                <div class="tweet-container-message">
                    <label for="message"></label>
                    <div class="tweet-container-text">
                        <textarea name="message" id="message" placeholder="Whats's happening ?"></textarea>
                    </div>

                </div>
                <div class="tweet-container-button">
                    <button type="submit" class="tweet-button">Tweet</button>
                </div>

            </form>

            <div class="comments">

                <% tweetsInfo.forEach((list)=> { %>

                    <div class="comments-comment">
                        <a href="/username"><img src="" alt=""></a>
                        <div class="comments-comment-content">
                            <div class="comments-comment-content-nameDate">

                                <h3 class="comments-comment-content-username"><a href="/users/<%= list.id_user%>"><%= list.username %></a></h3>  <section class="section-accueil">
                             
                                  <span class="comments-comment-content-date"> <%= list.creation_date %></span>

                                  <p class="comments-comment-content-text"> <%= list.texts %></p>
                                
                                    <div class="tweet-search"></div>
                                
                                  </section>

                            </div>
                

                        </div>
                    </div>
                    <% }) %>

            </div>

        </div>

        <div class="tweet-search"></div>

    </section>

</body>

</html>